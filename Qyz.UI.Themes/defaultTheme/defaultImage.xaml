<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Image" x:Key="leftImage">
        <Setter Property="Source" Value="image/left.png"></Setter>
    </Style>
    <Style TargetType="Image" x:Key="topImage">
        <Setter Property="Source" Value="image/top.png"></Setter>
    </Style>

    <Style TargetType="Image" x:Key="dialog_top">
        <Setter Property="Source" Value="image/Dialog_Top.jpg"></Setter>
    </Style>
    <Style TargetType="Image" x:Key="dialog_bottom">
        <Setter Property="Source" Value="image/Dialog_footer.jpg"></Setter>
    </Style>
</ResourceDictionary>